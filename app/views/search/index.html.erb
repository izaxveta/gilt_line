<% @venues.each do |venue| %>
  <div class='venue'>
    <%= link_to venue_path(venue: venue.as_json) do %>
      <div class='name'><%= venue.name %></div>
      <div class='categories'><%= venue.categories %></div>
      <div class='price'><%= venue.price %></div>
      <div class='rating'><%= venue.rating %></div>
      <div class='review_count'><%= venue.review_count %></div>
      <div class='phone'><%= venue.phone %></div>
      <div class='location'><%= venue.location %></div>
      <div class='venue-image'><%= image_tag venue.image_url %></div>
    <% end %>
  </div>
<% end %>